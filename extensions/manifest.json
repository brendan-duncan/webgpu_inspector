{
  "name": "WebGPU Inspector",
  "short_name": "webgpu-inspector",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "WebGPU Debugging Tools",
  "author": "Brendan Duncan",
  "minimum_chrome_version": "116",
  "permissions": ["sidePanel", "contextMenus", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "19": "images/webgpu_inspector_on-19.png",
    "38": "images/webgpu_inspector_on-38.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": {
      "19": "images/webgpu_inspector_on-19.png",
      "38": "images/webgpu_inspector_on-38.png"
    },
    "default_title": "WebGPU Inspector"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at" : "document_start",
      "all_frames" : true,
      "css": ["webgpu-inspector.css"],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "webgpu-recorder.js",
        "webgpu-inspector.js"
       ],
      "matches": ["*://*/*"]
    }
  ]
}
