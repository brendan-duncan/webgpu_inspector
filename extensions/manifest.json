{
  "name": "WebGPU Inspector",
  "short_name": "webgpu_inspector",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "WebGPU Debugging Tools",
  "author": "Brendan Duncan",
  "minimum_chrome_version": "116",
  "permissions": [],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "19": "images/webgpu_inspector_on-19.png",
    "38": "images/webgpu_inspector_on-38.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "devtools_page": "webgpu_inspector_devtools.html",
  "content_scripts": [
    {
      "js": ["content_script.js"],
      "matches": ["<all_urls>"],
      "run_at" : "document_start",
      "all_frames" : true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "webgpu_recorder.js",
        "webgpu_inspector.js",
        "webgpu_inspector_panel.html",
        "src/texture_format_info.js",
        "src/texture_utils.js",
        "src/base64.js",
        "src/message_port.js"
       ],
      "matches": ["*://*/*"]
    }
  ]
}
